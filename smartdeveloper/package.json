{
	"name": "smartdeveloper",
	"displayName": "SmartDeveloper",
	"description": "https://github.com/profimedica/Templater/wiki/Ajuro-Template-Processor",
	"version": "0.0.1",
	"publisher": "profimedica",
	"engines": {
		"vscode": "^1.16.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.SmartDeveloper",
		"onView:templateManager",
		"onView:jsonOutline"
	],
	"main": "./out/extension",
	"contributes": {
		"menus": {
			"view/title": [
				{
					"command": "templateManager.refreshEntry",
					"when": "view == templateManager",
					"group": "navigation"
				},
				{
					"command": "templateManager.addEntry",
					"when": "view == templateManager"
				}
			],
			"view/item/context": [
				{
					"command": "templateManager.deleteEntry",
					"when": "view == templateManager && viewItem == template"
				}
			],
			"editor/title": [
				{
					"when": "resourceLangId == markdown",
					"command": "markdown.showPreview",
					"alt": "markdown.showPreviewToSide",
					"group": "navigation"
				}
			]
		},
		"commands": [
			{
				"command": "templateManager.addEntry",
				"title": "Add"
			},
			{
				"command": "templateManager.deleteEntry",
				"title": "Delete"
			},
			{
				"command": "templateManager.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "openTemplateFile",
				"title": "Open Template File"
			},
			{
				"command": "extension.SmartDeveloper",
				"title": "SmartDeveloper"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "templateManager",
					"name": "My Templates"
				},
				{
					"id": "jsonOutline",
					"name": "Json Outline",
					"when": "resourceLangId == 'json'"
				}
			]
		}
	},
	"devDependencies": {
		"typescript": "^2.5.3",
		"vscode": "^1.1.5",
		"@types/node": "^7.0.43",
		"@types/mocha": "^2.2.42"
	},
	"scripts": {
		"prepublishOnly": "tsc -p ./",
		"build": "tsc -p ./",
		"prepare": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"dependencies": {
		"jsonc-parser": "^0.4.2",
		"ftp": "^0.3.10"
	}
}
